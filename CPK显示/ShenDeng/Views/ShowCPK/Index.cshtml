@{ 
    Layout = null;
    ViewBag.Title = "CPK概览";
}

<!doctype html>
<html>
<head>
    <link href="~/Content/showCPK/css/showcpk.css" rel="stylesheet" type="text/css" />
    <script src="~/Content/showCPK/js/jquery.min.js"></script>
</head>
<body>
    <div>
        <label>时间: </label><input type="date" name="time" value="@DateTime.Now.ToLocalTime().ToString("yyyy-MM-dd")" />
        <h2 style="display: inline-block; margin-left:30%;" class="color_white">SMT SPI CPK实时监测</h2>
    </div>
    <div>
        <label>类型: </label>
        <select class="shortselect" name="choose_cpk">
            <option value="Field3">VolCPK</option>
            <option value="Field1">HeightCPK</option>
            <option value="Field2">AreaCPK</option>
            <option value="Field4">ShiftXCPK</option>
            <option value="Field5">ShiftYCPK</option>
        </select>
        <button type="button" class="button1" onclick="refresh_table()">查询</button>
        <div style="text-align:center; background-color:#FF4040; width:70px; height:28px; float:right ">小于1.33</div>
    </div>

    <div id="wrap">
        <table id="mtable" cellpadding="0" cellspacing="0">
            <thead>
                <tr id="th">
                    <th>线体</th>
                    @for (int i = 1; i <= 24; i++)
                    {
                        <th>@i h</th>
                    }
                </tr>
            </thead>
            <tbody id="mtbody"></tbody>
        </table>
    </div>
        <script src="~/Content/showCPK/js/showcpk.js"></script>
</body>
</html>
